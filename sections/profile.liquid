{%
   ###############################
 # You must add a schema between the lines
 # across multiple lines
 # below is the div tag responsible for putting the schema into the actual website
 ############################### %}
<div>
    <h3>
        {{section.settings.user_name}}
    </h3>
</div>

{% schema %}
  { 
    "name" : "Profile",
    /*When added this is the name of the section */
    "settings": [
    {
    "type" : "image_picker",
    "id" : "user_img",
    "label" : "User Photo"
    },
    {
    "type" : "text",
    "id" : "user_name",
    "label" : "User Name"
    },
    {
    "type" : "richtext",
    "id" : "user_bio",
    "label" : "User Bio"
    }
  ],
    /* 
    Label is the title that will be shown
    type is the type of input/output data that will be shown 
    id id the id of the data and is used when refering to the block using html
        */
  /* settings is the options that you will see when adding a user profile eg
   header will show a search bar where you would like to add your header into
   You will need an accept button potentially in the content section*/
    "presets" : [
        {
            "category":"Profile",
            "name": "User Profile"
            /* actual name of the section on the add section part at the bottom of screen*/
        }
    ]
  }
{% endschema %}